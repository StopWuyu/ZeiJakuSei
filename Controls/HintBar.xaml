<Border x:Class="ZeiJakuSei.Controls.HintBar"
        x:Name="HintBorder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Width="200"
        BorderBrush="Gray"
        BorderThickness="0,0,1,1"
        CornerRadius="0,10,10,0"
        Background="LightBlue"
        Height="30">
    <Grid>
        <TextBlock x:Name="HintText" VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding Text, ElementName=HintBorder}" FontSize="15" Padding="10,0,0,0" TextWrapping="Wrap" />
    </Grid>
</Border>
